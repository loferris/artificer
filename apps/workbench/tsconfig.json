{
  "extends": "../../tsconfig.root.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@artificer/ui": ["../../packages/ui/src"],
      "@artificer/fableforge": ["../../packages/fableforge/src"],
      "@artificer/hellbat": ["../../packages/hellbat/src"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts/**/*",
    "src/server/standalone.ts",
    "src/server/openapi-spec.ts",
    "src/test/**/*",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "vitest.config.ts",
    "vitest.e2e.config.ts",
    "../../packages/document-converter/**/*"
  ]
}
