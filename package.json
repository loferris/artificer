{
  "name": "artificer-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Artificer monorepo - UI libraries and applications",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter @artificer/workbench dev",
    "dev:fableforge": "pnpm --filter @artificer/fableforge-demo dev",
    "dev:hellbat": "pnpm --filter @artificer/hellbat-demo dev",
    "build": "pnpm -r build",
    "build:workbench": "pnpm --filter @artificer/workbench build",
    "build:fableforge": "pnpm --filter @artificer/fableforge-demo build",
    "build:hellbat": "pnpm --filter @artificer/hellbat-demo build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r exec rm -rf node_modules .next dist",
    "format": "prettier --write .",
    "postinstall": "pnpm --filter @artificer/workbench postinstall",
    "db:up": "docker compose up postgres -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up postgres -d",
    "db:migrate": "cd apps/workbench && prisma migrate dev",
    "db:studio": "cd apps/workbench && prisma studio",
    "db:admin": "docker compose --profile admin up pgadmin -d",
    "db:logs": "docker compose logs -f postgres",
    "db:seed": "cd apps/workbench && node --env-file=../../.env --import tsx scripts/seed-vector-data.ts",
    "db:seed:no-embeddings": "cd apps/workbench && SKIP_EMBEDDINGS=true node --env-file=../../.env --import tsx scripts/seed-vector-data.ts",
    "generate-api-key": "cd apps/workbench && node --env-file=../../.env --import tsx scripts/generate-api-key.ts",
    "list-api-keys": "cd apps/workbench && node --env-file=../../.env --import tsx scripts/list-api-keys.ts",
    "revoke-api-key": "cd apps/workbench && node --env-file=../../.env --import tsx scripts/revoke-api-key.ts",
    "highlight:up": "docker compose -f docker-compose.highlight.yml up -d",
    "highlight:down": "docker compose -f docker-compose.highlight.yml down",
    "highlight:logs": "docker compose -f docker-compose.highlight.yml logs -f",
    "highlight:restart": "docker compose -f docker-compose.highlight.yml restart",
    "highlight:clean": "docker compose -f docker-compose.highlight.yml down -v",
    "dev:with-highlight": "pnpm highlight:up && pnpm dev"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
