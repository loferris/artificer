{
  "name": "ai-workflow-engine",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "tsx server.ts",
    "dev:next": "next dev",
    "build": "prisma generate && next build",
    "start": "dotenv -e .env.local -- tsx server.ts",
    "start:next": "dotenv -e .env.local -- next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "vitest --config vitest.e2e.config.ts",
    "test:e2e:run": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:ui": "vitest --ui --config vitest.e2e.config.ts",
    "postinstall": "prisma generate",
    "db:up": "docker compose up postgres -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up postgres -d",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:admin": "docker compose --profile admin up pgadmin -d",
    "db:logs": "docker compose logs -f postgres"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@tanstack/react-query": "^5.0.0",
    "@trpc/client": "^11.5.1",
    "@trpc/next": "^11.0.0",
    "@trpc/react-query": "^11.0.0",
    "@trpc/server": "^11.5.1",
    "@types/node": "^20.19.17",
    "@types/ws": "^8.18.1",
    "date-fns": "^4.1.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.3",
    "next": "^15.5.2",
    "pg": "^8.16.3",
    "pino": "^9.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "superjson": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "ws": "^8.18.3",
    "zod": "^3.22.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "msw": "^2.11.1",
    "msw-trpc": "^2.0.1",
    "node-mocks-http": "^1.17.2",
    "pino-pretty": "^11.2.1",
    "prettier": "^3.3.2",
    "prisma": "^6.15.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
